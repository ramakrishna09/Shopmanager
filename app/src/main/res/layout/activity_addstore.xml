<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="com.example.srinivas.shopmanager.AddstoreActivity">

    <EditText
        android:id="@+id/editText_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText_n"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Store ID"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="74dp" />

    <EditText
        android:id="@+id/editText_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_l"
        android:layout_below="@+id/editText_id"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Store Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="201dp" />

    <EditText
        android:id="@+id/editText_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Location"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="331dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/editText_n"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:text="Save"
        android:onClick="Save"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="423dp"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/editText_l"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
